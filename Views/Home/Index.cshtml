@{
    ViewData["Title"] = "Home";
    var topBooks = ViewBag.TopBooks as IEnumerable<LibraryProject.Models.Book>;
}
<div class="text-center">
    <h1 class="display-1">Library</h1>
    <h4 class="display-9">New books every week, get your reading up and gambling debts down.</h4>
</div>
<h1>New Arrivals</h1>

<div class="container">
    <div class="row">
        @if (topBooks != null && topBooks.Any())
        {
            foreach (var book in topBooks)
            {
                <div class="col-md-12 mb-4">
                    <div class="card">
                        <div class="row g-0">
                            <!-- Image on the left -->
                            <div class="col-md-4">
                                <img src="@book.PictureUrl" class="img-fluid custom-img-size" alt="@book.Title" style="width: 250px; height: auto; object-fit: cover;" />
                            </div>
                            <!-- Info on the right -->
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h5 class="card-title">@book.Title</h5>
                                    <p class="card-text">@book.Author</p>
                                    <p class="card-text">@book.BookDescription</p>
                                    <a href="@Url.Action("Details", "Books", new { id = book.Id })" class="btn btn-primary">View Details</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <p>No new arrivals available.</p>
        }
    </div>
</div>
