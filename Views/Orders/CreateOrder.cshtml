@model LibraryProject.Models.Order

@{
    ViewData["Title"] = "Create Order";
}

<h1>Create Order</h1>

<div class="row">
    <div class="col-md-6">
        <h3>Order Book</h3>

        <h3>@Model.Book.Title</h3>
        <p>Borrow Date: @Model.OrderDate.ToString("dd MMM yyyy")</p>
        <p>Return Date: @Model.ReturnDate.ToString("dd MMM yyyy")</p>

        <form asp-action="CreateOrder" method="post">
            <div class="form-group">
                <label asp-for="BookId" class="control-label">Book</label>
                <select asp-for="BookId" class="form-control" asp-items="ViewBag.Books"></select>
                <span asp-validation-for="BookId" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="hidden" asp-for="UserId" />
                <button type="submit" class="btn btn-primary">Place Order</button>
            </div>
        </form>
    </div>
</div>
