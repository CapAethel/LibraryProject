@model LibraryProject.Models.Category

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Category</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="CategoryName" class="control-label"></label>
                <input asp-for="CategoryName" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>

            <!-- Hidden input to pass the returnUrl -->
            <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <!-- Cancel Button -->
                <a href="@(Url.IsLocalUrl(ViewData["ReturnUrl"]?.ToString()) ? Url.Content(ViewData["ReturnUrl"].ToString()) : Url.Action("Index", "Category"))" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
